import random
import time

def jugar_piedra_papel_tijera():

    """
    FunciÃ³n principal que encapsula la lÃ³gica del juego.
    Implementa estructuras repetitivas para mantener el juego activo
    hasta que el usuario decida salir.
    """
    
    opciones = ["piedra", "papel", "tijera"]
    
    puntos_usuario = 0
    puntos_pc = 0
    
    print("------------------------------------------------")
    print(" Bienvenido a Piedra, Papel o Tijera - VersiÃ³n Python")
    print("------------------------------------------------")


    while True:
        
        print(f"\nMarcador Actual -> TÃº: {puntos_usuario} | CPU: {puntos_pc}")
        entrada_usuario = input("Elige (piedra, papel, tijera) o 'salir' para terminar: ").lower()


        if entrada_usuario == 'salir':
            print("\nÂ¡Gracias por jugar!")
            print(f"Resultado Final -> TÃº: {puntos_usuario} | CPU: {puntos_pc}")
            break
        
 
        if entrada_usuario not in opciones:
            print("âŒ Error: Por favor escribe una opciÃ³n vÃ¡lida.")
            continue 


        eleccion_pc = random.choice(opciones)
        
        print(f"â³ La CPU estÃ¡ eligiendo...")
        time.sleep(1) 
        print(f"ğŸ¥Š TÃº: {entrada_usuario.upper()}  vs  CPU: {eleccion_pc.upper()}")


        if entrada_usuario == eleccion_pc:
            print("result: ğŸŸ¡ Â¡Es un EMPATE!")
        
        elif (entrada_usuario == "piedra" and eleccion_pc == "tijera") or \
             (entrada_usuario == "papel" and eleccion_pc == "piedra") or \
             (entrada_usuario == "tijera" and eleccion_pc == "papel"):
            print("result: ğŸŸ¢ Â¡GANASTE esta ronda!")
            puntos_usuario += 1
            
        else:
            print("result: ğŸ”´ Â¡PERDISTE esta ronda!")
            puntos_pc += 1


if __name__ == "__main__":
    jugar_piedra_papel_tijera()
    
