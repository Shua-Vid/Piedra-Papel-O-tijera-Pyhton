import random
import time

def jugar_piedra_papel_tijera():

    """
    Funci√≥n principal que encapsula la l√≥gica del juego.
    Implementa estructuras repetitivas para mantener el juego activo
    hasta que el usuario decida salir.
    """
    
    opciones = ["piedra", "papel", "tijera"]
    
    puntos_usuario = 0
    puntos_pc = 0
    
    print("------------------------------------------------")
    print(" Bienvenido a Piedra, Papel o Tijera - Versi√≥n Python")
    print("------------------------------------------------")


    while True:
        
        print(f"\nMarcador Actual -> T√∫: {puntos_usuario} | CPU: {puntos_pc}")
        entrada_usuario = input("Elige (piedra, papel, tijera) o 'salir' para terminar: ").lower()


        if entrada_usuario == 'salir':
            print("\n¬°Gracias por jugar!")
            print(f"Resultado Final -> T√∫: {puntos_usuario} | CPU: {puntos_pc}")
            break
        
 
        if entrada_usuario not in opciones:
            print("‚ùå Error: Por favor escribe una opci√≥n v√°lida.")
            continue 


        eleccion_pc = random.choice(opciones)
        
        print(f"‚è≥ La CPU est√° eligiendo...")
        time.sleep(1) 
        print(f"ü•ä T√∫: {entrada_usuario.upper()}  vs  CPU: {eleccion_pc.upper()}")


        if entrada_usuario == eleccion_pc:
            print("result:  ¬°Es un EMPATE!")
        
        elif (entrada_usuario == "piedra" and eleccion_pc == "tijera") or \
             (entrada_usuario == "papel" and eleccion_pc == "piedra") or \
             (entrada_usuario == "tijera" and eleccion_pc == "papel"):
            print("result:  ¬°GANASTE esta ronda!")
            puntos_usuario += 1
            
        else:
            print("result:  ¬°PERDISTE esta ronda!")
            puntos_pc += 1


if __name__ == "__main__":
    jugar_piedra_papel_tijera()
    
